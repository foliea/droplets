{
  "variables": {
    "region": "{{env `REGION`}}",
    "size": "{{env `SIZE`}}"
  },

  "builders": [{
    "type": "digitalocean",
    "droplet_name": "grounds-docker",
    "snapshot_name": "grounds-docker{{timestamp}}",
    "image": "Ubuntu 14.04 x64",
    "region": "{{user `region`}}",
    "size": "{{user `size`}}"
  }],
  
  "provisioners": [{
    "type": "shell",
    "scripts": [
      "scripts/provision.sh" 
    ]
  }]
}
